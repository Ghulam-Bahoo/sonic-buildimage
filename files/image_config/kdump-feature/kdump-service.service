[Unit]
Description=Monitor and Update kdump-tools Configuration
Requires=config-setup.service
After=config-setup.service
BindsTo=sonic.target
After=sonic.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/env python3 /usr/bin/kdump-service.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=sonic.target
